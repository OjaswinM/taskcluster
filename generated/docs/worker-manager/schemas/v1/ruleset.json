    "properties": {
      "id": {
        "type": "string"
      },
      "conditions": {
        "type": "object",
        "properties": {
          "workerType": {
            "type": "string",
            "minLength": 1,
            "maxLength": 38,
            "pattern": "^([a-zA-Z0-9-_]*)$"
          }
        },
        "additionalProperties": {
          "type": "string"
        }
      },
      "values": {
        "type": "object"
      },
      "description": {
        "type": "string"
      }
    },
    "additionalProperties": false,
    "required": [
      "id",
      "values",
      "description"
    ]
  },
  "$id": "/schemas/worker-manager/v1/ruleset.json#"
}