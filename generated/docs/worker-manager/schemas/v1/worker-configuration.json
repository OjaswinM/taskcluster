{
  "$schema": "/schemas/common/metaschema.json#",
  "title": "Worker Configuration",
  "description": "Worker Configuration\n",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "workerTypes": {
      "type": "array",
      "items": {
        "type": [
          "string",
          "object"
        ],
        "minLength": 1,
        "maxLength": 38,
        "pattern": "^([a-zA-Z0-9-_]*)$",
        "properties": {
          "workerType": {
            "type": "string",
            "minLength": 1,
            "maxLength": 38,
            "pattern": "^([a-zA-Z0-9-_]*)$"
          },
          "biddingStrategyId": {
            "type": "string"
          },
          "providerIds": {
            "type": "string"
          }
        },
        "required": [
          "workerType"
        ],
        "additionalProperties": false
      }
    },
    "rules": {
      "$ref": "ruleset.json#"
    },
    "biddingStrategyId": {
      "type": "string"
    },
    "providerIds": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "rules",
    "workerTypes"
  ],
  "$id": "/schemas/worker-manager/v1/worker-configuration.json#"
}